          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [
                "option",
                "shift",
                "command",
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "shift"
              ]
            },
            {
              "key_code": "x",
              "modifiers": [
                "command"
              ]
            },
            {
              "key_code": "left_arrow"
            },
            {
              "key_code": "v",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^md\\.obsidian$",
                "^com\\.sublimetext"
              ]
            },
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^de$"
                }
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "p",
            "modifiers": {
              "mandatory": [
                "option",
                "shift",
                "command",
