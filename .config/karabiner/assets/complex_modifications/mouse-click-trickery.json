{
  "title": "🐁 Mouse Click Trickery",
  "version": "1.2",
  "maintainers": [
    "pseudometa"
  ],
  "import-url": "karabiner://karabiner/assets/complex_modifications/import?url=https://github.com/chrisgrieser/dotfiles/blob/main/.config/karabiner/assets/complex_modifications/mouse-click-trickery.json",
  "homepage": "https://github.com/chrisgrieser/dotfiles/karabiner",
  "rules": [
    {
      "description": "🐁 R (tap): Open link in background (when in Browser)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button2"
          },
          "to_if_held_down": [
            {
              "pointing_button": "button2"
            }
          ],
          "to": [
            {
              "pointing_button": "button3"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.chromium\\.Chromium$",
                "^com\\.brave\\.Browser$",
                "^com\\.apple\\.Safari$"
              ]
            }
          ],
          "parameters": {
            "basic.to_if_held_down_threshold_milliseconds": 300
          }
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button2"
          },
          "to": [
            {
              "pointing_button": "button2"
            },
            {
              "key_code": "vk_none",
              "hold_down_milliseconds": 10
            },
            {
              "key_code": "o"
            },
            {
              "key_code": "return_or_enter"
            },
            {
              "key_code": "vk_none",
              "hold_down_milliseconds": 600
            },
            {
              "key_code": "h",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.agiletortoise\\.Drafts-OSX$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button1",
            "modifiers": {
              "mandatory": [
                "command"
              ]
            }
          },
          "to": [
            {
              "pointing_button": "button2"
            },
            {
              "key_code": "vk_none",
              "hold_down_milliseconds": 10
            },
            {
              "key_code": "o"
            },
            {
              "key_code": "return_or_enter"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.agiletortoise\\.Drafts-OSX$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "🐁 3: Quit app",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3"
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.hegenberg\\.BetterTouchTool$",
                "^org\\.hammerspoon\\.Hammerspoon$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3"
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.hegenberg\\.BetterTouchTool$",
                "^org\\.hammerspoon\\.Hammerspoon$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "🐁 4 (bottom)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to_if_alone": [
            {
              "pointing_button": "button4"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.brave\\.Browser$",
                "^com\\.brave\\.Browser.+",
                "^com\\.apple\\.finder$",
                "^com\\.mimestream\\.Mimestream$",
                "^net\\.highlightsapp\\.universal$",
                "^org\\.yanex\\.marta$"
              ]
            }
          ],
          "to_if_held_down": [
            {
              "shell_command": "open -a \"Mission Control\""
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 250
          }
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to_if_alone": [
            {
              "key_code": "escape"
            },
            {
              "key_code": "left_arrow",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.brave\\.Browser$"
              ]
            }
          ],
          "to_if_held_down": [
            {
              "shell_command": "open -a \"Mission Control\""
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 250
          }
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to_if_alone": [
            {
              "key_code": "escape"
            },
            {
              "shell_command": "osascript -e 'tell application \"Brave Browser\" to set URL of active tab of front window to \"https://www.youtube.com\"'"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.brave\\.Browser.+"
              ]
            }
          ],
          "to_if_held_down": [
            {
              "shell_command": "open -a \"Mission Control\""
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 250
          }
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to_if_alone": [
            {
              "key_code": "h",
              "modifiers": [
                "control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^org\\.yanex\\.marta$",
                "^md\\.obsidian$"
              ]
            }
          ],
          "to_if_held_down": [
            {
              "shell_command": "open -a \"Mission Control\""
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 250
          }
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to_if_alone": [
            {
              "key_code": "non_us_pound"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.mimestream\\.Mimestream$"
              ]
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "d",
              "modifiers": [
                "command",
                "control"
              ]
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 250
          }
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to_if_alone": [
            {
              "key_code": "n",
              "modifiers": [
                "command",
                "control"
              ]
            },
            {
              "key_code": "3",
              "modifiers": [
                "command",
                "control"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^net\\.highlightsapp\\.universal$"
              ]
            }
          ],
          "to_if_held_down": [
            {
              "shell_command": "open -a \"Mission Control\""
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 250
          }
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to_if_alone": [
            {
              "shell_command": "osascript -e '\n  tell application \"System Events\"\n  tell process \"Finder\"\n    set frontmost to true\n    click menu item \"Back\" of menu \"Go\" of menu bar 1\n  end tell\nend tell'\n"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.finder$"
              ]
            }
          ],
          "to_if_held_down": [
            {
              "shell_command": "open -a \"Mission Control\""
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 250
          }
        }
      ]
    },
    {
      "description": "🐁 5 (top)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to_if_alone": [
            {
              "pointing_button": "button5"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.brave\\.Browser$",
                "^com\\.apple\\.finder$",
                "^com\\.mimestream\\.Mimestream$",
                "^com\\.agiletortoise\\.Drafts-OSX$",
                "^net\\.highlightsapp\\.universal$",
                "^org\\.yanex\\.marta$"
              ]
            }
          ],
          "to_if_held_down": [
            {
              "shell_command": "osascript -e 'tell application id \"com.runningwithcrayons.Alfred\" to run trigger \"search-selection\" in workflow \"de.chris-grieser.plain-text-utilities\"'"
