{
  "title": "üêÅ Mouse Click Trickery",
  "version": "0.1",
  "maintainers": [
    "pseudometa"
  ],
  "import-url": "karabiner://karabiner/assets/complex_modifications/import?url=https://github.com/chrisgrieser/dotfiles/blob/main/.config/karabiner/assets/complex_modifications/mouse-click-trickery.json",
  "homepage": "https://github.com/chrisgrieser/dotfiles/karabiner",
  "rules": [
    {
      "description": "üêÅ 3: Quit app",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3"
          },
          "to": [
            {
              "key_code": "q",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.apple\\.finder$",
                "^com\\.hegenberg\\.BetterTouchTool$",
                "^org\\.hammerspoon\\.Hammerspoon$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button3"
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.apple\\.finder$",
                "^com\\.hegenberg\\.BetterTouchTool$",
                "^org\\.hammerspoon\\.Hammerspoon$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "üêÅ 4 (hold): Look up word under cursor, (tap): mouse4",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to_if_alone": [
            {
              "pointing_button": "button4"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "d",
              "modifiers": [
                "command",
                "control"
              ]
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 300,
            "basic.to_if_held_down_threshold_milliseconds": 300
          },
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.mimestream\\.Mimestream$",
                "^com\\.brave\\.Browser$",
                "^com\\.brave\\.Browser\\.app.\\w+$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": [
            {
              "shell_command": "osascript -e '\n  tell application \"System Events\"\n  tell process \"Brave Browser\"\n    set frontmost to true\n    click menu item \"Back\" of menu \"History\" of menu bar 1\n  end tell\nend tell'\n"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.brave\\.Browser$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": [
            {
              "key_code": "non_us_pound"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.mimestream\\.Mimestream$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button4"
          },
          "to": [
            {
              "shell_command": "osascript -e '\n  tell application \"System Events\"\n  tell process \"YouTube\"\n    set frontmost to true\n    click menu item \"Exit Full Screen\" of menu \"View\" of menu bar 1\n  end tell\nend tell'\n"
            },
            {
              "key_code": "g"
            },
            {
              "key_code": "u",
              "modifiers": [
                "shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.brave\\.Browser\\.app.\\w+$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "üêÅ 5 (hold): search selected text/URL, (tap): mouse5",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to_if_alone": [
            {
              "pointing_button": "button5"
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "c",
              "modifiers": [
                "command"
              ]
            },
            {
              "key_code": "vk_none",
              "hold_down_milliseconds": 75
            },
            {
              "shell_command": "osascript -e 'tell application id \"com.runningwithcrayons.Alfred\" to run trigger \"search-selection\" in workflow \"de.chris-grieser.plain-text-utilities\"'"
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 250,
            "basic.to_if_held_down_threshold_milliseconds": 250
          },
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "^com\\.brave\\.Browser$",
                "^com\\.apple\\.finder$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": [
            {
              "key_code": "w",
              "modifiers": [
                "command"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.brave\\.Browser$",
                "^com\\.apple\\.finder$",
                "^com\\.agiletortoise\\.Drafts-OSX",
                "^com\\.mimestream\\.Mimestream$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": [
            {
              "key_code": "a",
              "modifiers": [
                "command",
                "shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.agiletortoise\\.Drafts-OSX$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to": [
            {
              "key_code": "e"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.mimestream\\.Mimestream$"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "üêÅ 6: ‚åò‚Üπ",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button6"
          },
          "to": [
            {
              "key_code": "tab",
              "modifiers": [
                "command"
              ]
            }
          ]
        }
      ]
    }
  ]
}
