          },
          "to_if_alone": [
            {
              "key_code": "a",
              "modifiers": [
                "command",
                "shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.agiletortoise\\.Drafts-OSX$"
              ]
            }
          ],
          "to_if_held_down": [
