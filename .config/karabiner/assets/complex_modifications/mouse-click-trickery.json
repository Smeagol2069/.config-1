          }
        },
        {
          "type": "basic",
          "from": {
            "pointing_button": "button5"
          },
          "to_if_alone": [
            {
              "key_code": "e"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.mimestream\\.Mimestream$"
              ]
            }
          ],
          "to_if_held_down": [
            {
