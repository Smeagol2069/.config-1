            {
              "key_code": "right_arrow",
              "modifiers": [
                "option"
              ]
            },
            {
              "key_code": "left_arrow",
              "modifiers": [
                "option",
                "shift"
              ]
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
