{
  "title": "⚒️ Vim Utilities",
  "homepage": "https://github.com/chrisgrieser/dotfiles/karabiner",
  "rules": [
    {
      "description": "⚒️ Fix <S-Space> for neovim",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "command",
                "control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "⚒️ f+j (simultaneously): ↵",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "simultaneous": [
              {
                "key_code": "f"
              },
              {
                "key_code": "j"
              }
            ]
          },
          "parameters": {
            "basic.simultaneous_threshold_milliseconds": 100
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ]
        }
      ]
    },
    {
      "description": "⚒️ R-J (tap): go to end of line",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "right_command"
          },
          "to": [
            {
              "key_code": "right_command"
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 200
          },
          "to_if_alone": [
            {
              "key_code": "e",
              "modifiers": [
                "control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "⚒️ {}@^~|: German to US layout",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "8",
            "modifiers": {
              "mandatory": [
                "option"
              ]
            }
          },
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^de$"
                }
              ]
            },
            {
              "type": "frontmost_application_if",
              "file_paths": [
                "^/Applications/Obsidian\\.app",
                "^/Applications/Sublime Text\\.app",
                "[Nn]eovide"
              ]
            }
          ],
          "to": [
            {
              "select_input_source": {
                "input_source_id": "^com\\.apple\\.keylayout\\.US$"
              }
            },
            {
              "key_code": "vk_none",
              "hold_down_milliseconds": 20
            },
            {
              "key_code": "open_bracket",
              "modifiers": [
                "shift"
              ]
            }
          ],
          "to_after_key_up": [
            {
              "select_input_source": {
                "input_source_id": "^com\\.apple\\.keylayout\\.ABC-QWERTZ$"
