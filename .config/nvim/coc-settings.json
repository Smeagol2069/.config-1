// vim: filetype=jsonc

{
  "coc.preferences.extensionUpdateCheck": "weekly",
  "coc.source.around.disableSyntaxes": ["comment"],
  "coc.source.buffer.enable": false,
  "suggest.selection": "recentlyUsed",
  "suggest.ignoreRegexps": [
    ".{50,}"
  ],
  "suggest.labelMaxLength": 50,
  "suggest.lowPrioritySourceLimit": 20,
  "suggest.floatConfig": {"border": true, "shadow": false},
  "suggest.virtualText": true,

  "diagnostic.errorSign": "▪︎",
  "diagnostic.warningSign": "▴",
  "diagnostic.infoSign": "•",
  "diagnostic.hintSign": "•",

  "Lua.diagnostics.globals": ["vim", "martax"],
  "Lua.diagnostics.disable": ["trailing-space"],
  "Lua.workspace.library": [
    "/Users/chrisgrieser/.hammerspoon/Spoons/EmmyLua.spoon/annotations",
    "/Users/chrisgrieser/.hammerspoon/lua",
    "/Users/chrisgrieser/.config/nvim/lua"
  ],

  "css.lint.vendorPrefix": "ignore",
  "css.lint.duplicateProperties": "error"
}

