# restart: `brew services restart sketchybar`
# reload (does only update items, not the look of the bar): `sketchybar --update`

################################################################################

PLUGIN_DIR="$HOME/.config/sketchybar/plugins"

##### Bar Appearance #####
# https://felixkratz.github.io/SketchyBar/config/bar
# https://felixkratz.github.io/SketchyBar/config/tricks#color-picker

IS_DARK_MODE=$(osascript -e 'tell application "System Events" to return dark mode of appearance preferences')
if [[ "$IS_DARK_MODE" == "true" ]]; then
	BG_COLOR="0xff333333"
	FONT_COLOR="0xffffffff"
else
	BG_COLOR="0xffcdcdcd"
	FONT_COLOR="0xff000000"
fi

sketchybar --bar height=25                              \
                 position=top                           \
                 padding_left=7                         \
                 padding_right=7                        \
                 color="$BG_COLOR"                      \
			  --default updates=when_shown                 \
                     drawing=on                         \
                     icon.font="Helvetica:Bold:13.0"    \
                     icon.color="$FONT_COLOR"           \
                     label.font="Recursive:Medium:14.0" \
                     label.color="$FONT_COLOR"          \
                     label.padding_left=4               \
                     label.padding_right=4              \
                     icon.padding_left=2                \
                     icon.padding_right=2


##### Adding Items #####
# https://felixkratz.github.io/SketchyBar/config/items#adding-items-to-sketchybar

sketchybar --add item clock right                            \
           --set clock   update_freq=60                      \
                         script="$PLUGIN_DIR/clock.sh"       \
                         y_offset=1                          \
                         width=120                           \
           --add alias "Stats,CPU_Bar chart" right           \
           --add item weather right                          \
           --set weather update_freq=1800                    \
                         script="$PLUGIN_DIR/weather.sh"     \
                         y_offset=1                          \
           --add item covid-stats right                      \
           --set covid-stats update_freq=43200               \
                         script="$PLUGIN_DIR/covid-stats.sh" \
                         y_offset=1                          \
           --add item git-sync right                         \
           --set git-sync update_freq=900                    \
                         script="$PLUGIN_DIR/git-sync.sh"    \
                         y_offset=2

# NOTE:
# - git-sync is also updated via `sketchybar --update` using hammerspoon's
#   file watcher, so there is no need for a high update frequency here
# - clock only needs the fixed width to fix the whitespace bug of the item next
#   to it (stats alias)

##### Finalizing Setup #####
# The below command is only needed at the end of the initial configuration and
# should never be run in an item script.

sketchybar --update

echo "sketchybar configuration loaded.."
